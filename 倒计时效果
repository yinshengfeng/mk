<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>
<body>

 <div class="content1">
     <div id="show">时间是:</div>
 </div>

    <script>
    window.onload=function () {
    showTime()
    }
    function checkTime(i) {
        if(i<10){
            i="0"+i
        }
        return i;
    }
        function showTime() {
            var myDate=new Date()
            var year=myDate.getFullYear()

            var month=myDate.getMonth()+1

            var date=myDate.getDate()
            var d=myDate.getDay()

            var h=myDate.getHours()
            var m=myDate.getMinutes()
            var s=myDate.getSeconds()

            m=checkTime(m)
            s=checkTime(s)

            var weekday=new Array(7)
            weekday[0]='星期日'
            weekday[1]='星期一'
            weekday[2]='星期二'
            weekday[3]='星期三'
            weekday[4]='星期四'
            weekday[5]='星期五'
            weekday[6]='星期六'

            var show=document.getElementById('show')

            show.innerHTML=year+'年'+month+'月'+date+'日'+weekday[d]+h
                    +':'+m+':'+s
            setTimeout(showTime,500)


        }

    </script>
</body>
</html>
