<script src="999.js">
    



    var  list=document.getElementById('nav').getElementsByTagName('li')


    var  odl=document.getElementById('nav').getElementsByTagName('dl')


    for(var i=0;i<list.length;i++){

        list[i].indenx=i

        list[i].onmouseover=function () {
            for(var j=0;j<odl.length;j++){
                odl[j].indenx=j
                odl[this.indenx].style.display='block'
            }
        }

        list[i].onmouseout=function () {
            for(var j=0;j<odl.length;j++){
                odl[j].indenx=j
                odl[this.indenx].style.display='none'
            }
        }
    }
    
</script>
